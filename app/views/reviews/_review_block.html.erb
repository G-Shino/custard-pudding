<div class="container d-none d-md-block">
  <div class="row">
    <div class="col-5" style="height: 250px">
      <% if review.image.attached? %>
          <%= image_tag review.image, class: "rounded h-100 w-100"%>
      <% end %>
    </div>
    <div class="col-7">
      <div class="d-flex justify-content-between">
        <h2><%= review.name%></h2>
        <div style="height: 1.5rem">
          <% if current_user == review.user%>
            <%= link_to "削除する", review, method: :delete, data: {confirm: "削除してよろしいですか？"}, class: "btn btn-danger btn-sm" %>
          <% else %>
            <%= render "favorites/favorite_button", review: review %>
          <% end %>
        </div>
      </div>
      <table class="table table-bordered">
        <tr>
          <th>プリンの固さ</th>
          <td>
            固め&nbsp;
            <% for num in 1..5 do %>
              <% if num ==  review.hardness %>
                <span class="fa fa-circle checked"></span>
              <% else %>
                <span class="fa fa-circle"></span>
              <% end %>
            <% end %>
            &nbsp;とろける
          </td>
        </tr>
        <tr>
          <th>プリンの濃厚さ</th>
          <td>
            濃厚&nbsp;
            <% for num in 1..5 do %>
              <% if num ==  review.richness %>
                <span class="fa fa-circle checked"></span>
              <% else %>
                <span class="fa fa-circle"></span>
              <% end %>
            <% end %>
            &nbsp;あっさり
          </td>
        </tr>
        <tr>
          <th>キャラメル</th>
          <td><%= review.caramel%></td>
        </tr>
      </table>
      <div class="d-flex justify-content-between">
        <%= link_to "レビュー詳細を見る", review, class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
</div>

