<h1>レビュー作成</h1>
<div class="row">
    <div class="col-6">
    <%= form_with(model: @review, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :name, "商品名" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
        </div>
        <div class="form-group">
            <%= f.label :hardness, "固さ" %><br />
            <%= f.select :hardness, {"固め": 1, "ちょっと固め": 2, "普通": 3, "少し柔らかい": 4, "とろける": 5}, {include_blank: "選択してください"}, class: "form-control", required: true  %>
        </div>
        <div class="form-group">
            <%= f.label :richness, "濃厚さ" %><br />
            <%= f.select :richness, {"濃厚": 1, "ちょっと濃いめ": 2, "普通": 3, "少し薄め": 4, "あっさり": 5}, {include_blank: "選択してください"}, class: "form-control", required: true  %>
        
        </div>
        <div class="form-group">
            <%= f.label :caramel, "キャラメル" %><br />
            <%= f.select :caramel, {"苦い": 1, "甘い": 2, "なし": 3}, {include_blank: "選択してください"}, class: "form-control", required: true  %>
        </div>
        <div class="form-group">
            <%= f.label :image, "商品写真" %><br />
            <%= f.file_field :image, required: true %>
        </div>
        <%= f.submit "レビュー作成", class: "btn btn-primary btn-block" %>
    <% end %>
    </div>
</div>