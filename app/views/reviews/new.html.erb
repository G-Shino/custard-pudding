<h1>レビュー作成</h1>
<div class="row">
    <div class="col-6">
    <%= form_with(model: @review, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :name, "商品名" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
        </div>
        <div class="form-group">
            <%= f.label :hardness, "固さ" %><br />
            <%= f.text_field :hardness, class: "form-control", required: true  %>
        </div>
        <div class="form-group">
            <%= f.label :richness, "濃厚さ" %><br />
            <%= f.text_field :richness, class: "form-control", required: true  %>
        </div>
        <div class="form-group">
            <%= f.label :caramel, "キャラメル" %><br />
            <%= f.text_field :caramel, class: "form-control", required: true  %>
        </div>
        <div class="form-group">
            <%= f.label :image, "商品写真" %><br />
            <%= f.file_field :image, required: true %>
        </div>
        <%= f.submit "レビュー作成", class: "btn btn-primary btn-block" %>
    <% end %>
    </div>
</div>