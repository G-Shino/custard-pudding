<h1>店舗作成</h1>
<div class="row">
    <div class="col-6">
    <%= form_with(model: @shop, local: true) do |f| %>
        <div class="form-group">
            <%= f.label :name, "店舗名" %><br />
            <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
        </div>
        <div class="form-group">
            <%= f.label :kind, "種類" %><br />
            <%= f.select :kind, {"コンビニ": 1, "カフェ": 2}, {include_blank: "選択してください"}, class: "form-control", required: true  %>
        </div>
        <div class="form-group">
            <%= f.label :address, "住所" %><br />
            <%= f.text_field :address, class: "form-control", required: true  %>
        </div>
        <div class="form-group">
            <%= f.label :holiday, "定休日" %><br />
            <%= f.text_field :holiday, class: "form-control", required: true  %>
        </div>
        <div class="form-group">
            <%= f.label :image, "店舗外観" %><br />
            <%= f.file_field :image, required: true %>
        </div>
        <%= f.submit "店舗作成", class: "btn btn-primary btn-block" %>
    <% end %>
    </div>
</div>
