<div class="container d-none d-md-block">
  <div class="row">
    <div class="col-4" style="height: 250px">
      <% if shop.image.attached? %>
          <%= image_tag shop.image, class: "rounded h-100 w-100"%>
      <% end %>
    </div>
    <div class="col-8">
      <div class="d-flex justify-content-between">
        <h2><%= shop.name%></h2>
        <div style="height: 1.5rem">
          <% if current_user == shop.user%>
              <%= link_to "削除する", shop, method: :delete, data: {confirm: "削除してよろしいですか？"}, class: "btn btn-danger btn-sm" %>
          <% end %>
        </div>
      </div>
      <table class="table table-bordered">
        <tr>
          <th>店舗の種類</th>
          <td><%= shop.kind%></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= shop.address%></td>
        </tr>
        <tr>
          <th>定休日</th>
          <td><%= shop.holiday%></td>
        </tr>
      </table>
      <div class="d-flex justify-content-end">
        <%= link_to "店舗詳細を見る", shop, class: "btn btn-primary btn-block" %>
      </div>
    </div>
  </div>
</div>

