<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h1><%= @shop.name %>の詳細ページ</h1>
    </div>
    <div class="col-md-3 d-flex h-75 justify-content-end align-self-center mb-3">
      <% if current_user == @shop.user%>
        <%= link_to "この店舗を削除する", @shop, method: :delete, data: {confirm: "削除してよろしいですか？"}, class: "btn btn-danger btn-block h-10px" %>
      <% end %>
    </div>
  </div>
  <hr/>
  <div class="row">
    <div class="col-12 col-md-7">
      <div  style="height: 400px" class="mb-3">
        <% if @shop.image.attached? %>
            <%= image_tag @shop.image, class: "rounded h-100 w-100"%>
        <% end %>
      </div>
      <div class="d-none d-md-flex justify-content-between">
        <%= link_to "店舗一覧に戻る", shops_path, class: "btn btn-primary btn-block"%>
      </div>
    </div>
    <div class="col-md-5 col-12">
      <table class="table table-bordered">
        <tr>
          <th>店舗の種類</th>
          <td><%= @shop.kind%></td>
        </tr>
        <tr>
          <th>住所</th>
          <td><%= @shop.address%></td>
        </tr>
        <tr>
          <th>定休日</th>
          <td><%= @shop.holiday%></td>
        </tr>
      </table>
      <div class="d-flex d-md-none justify-content-between mt-3">
        <%= link_to "店舗一覧に戻る", shops_path, class: "btn btn-primary btn-block"%>
      </div>
    </div>
  </div>
  <br/>
  <div>
    <h2 class="mr-5">レビュー一覧</h2>
    <hr/>
    <div class="container">
      <%= link_to "自分のレビューを投稿する", new_review_path, class: "btn btn-warning btn-block mb-3 mt-3"%>
    </div>
    <%= render "reviews/reviews_list", reviews: @reviews %>
  </div>
</div>
